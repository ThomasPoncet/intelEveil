rule "Blink off"
when
        Item Lampe_Salon received command OFF
then
        logInfo("SwitchLightsOff","Switching off")
        sendCommand(Arduino, "0")
end

rule "Blink on"
when
        Item Lampe_Salon received command ON
then
        logInfo("SwitchLightsOn","Switching on")
        sendCommand(Arduino, "1")
end